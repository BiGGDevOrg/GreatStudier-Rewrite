<%= simple_form_for @set do |f| %>
  <%= f.input :name, label: 'Set Name' %>
  <%= f.input :description, label: 'Set Description', as: :rich_text_area %>

  <br>
  <h3>Terms</h3>

  <div id='card-items'>
    <%= f.simple_fields_for :cards do |card| %>
      <%= render 'card_fields', form: card %>
    <% end %>
  </div>

  <%= link_to_add_nested(f, :cards, '#card-items', link_text: 'Add Term') %>

  <br>
  <br>

  <%= f.button :submit, class: 'btn btn-primary' %>
  <%= link_to 'Back to All Sets', card_sets_path %>
<% end %>