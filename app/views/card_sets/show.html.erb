<% content_for :title do %>
  <%= @set.name %>
<% end %>

<div class="row">
  <div class="col">
    <h1><%= @set.name %></h1>
    <h5><%= @set.description %></h5>
    <hr>

    <h3>Activities</h3>

    <h5>Long Term Memory</h5>
    <%= link_to 'Learn', card_set_learn_path(@set.friendly_id), class: 'btn btn-primary' %>
    <%= link_to 'Review', card_set_review_path(@set.friendly_id), class: 'btn btn-primary' %>
    <br>
    <br>

    <h5>Short Term Memory</h5>
    <%= link_to 'Study', card_set_study_path(@set.friendly_id), class: 'btn btn-primary' %>
    <br>

    <hr>

    <h3>TERMS (<%= @set.cards.length %>)</h3>
    <br>

    <% @set.cards.each do |card| %>
      <div class="card px-2 py-2 shadow-sm p-3 mb-2 bg-white rounded border-2">
        <div class="row">
          <p class="col-md-6"><%= card.term %></p>
          <p class="col-md-6"><%= card.definition %></p>
        </div>
      </div>
      <br>
    <% end %>

    <hr>

    <%= link_to 'Download Set', download_card_set_path(@set), class: 'btn btn-primary', style: 'margin-bottom: 10px;'%>

    <br>

    <div style="float: left; width: auto; margin-right: 10px;">
      <%= link_to 'Edit Set', edit_card_set_path(@set), class: 'btn btn-warning' %>
    </div>
    <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteSetModal">Delete Set</button>

    <div class="modal fade" id="deleteSetModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="deleteModalTitle">Delete Set</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <p>Are you sure you want to delete this set?</p>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
            <%= button_to 'Yes', @set, method: :delete, class: 'btn btn-danger'%>
          </div>
        </div>
      </div>
    </div>

  </div>
</div>
